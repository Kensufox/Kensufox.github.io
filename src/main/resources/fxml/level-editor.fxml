<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.game.controllers.LevelEditorController">
    <top>
        <HBox spacing="10">
            <TextField fx:id="mapNameField" promptText="Enter map name..." />
            <Button text="Save" fx:id="saveButton" onAction="#saveMap" />
            <Button text="Return" fx:id="returnButton" onAction="#returnToMenu" />
        </HBox>
    </top>
    <center>
        <GridPane fx:id="mapGrid" hgap="0" vgap="0"/>
    </center>
</BorderPane>
